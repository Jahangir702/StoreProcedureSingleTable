@model DoctorEditModel
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-12">
        <form asp-action="Edit" asp-controller="Doctors" method="post" enctype="multipart/form-data">
            <h3>Edit Doctor</h3>
            <input type="hidden" asp-for="DoctorId" />
            <div class="form-group row mb-1">
                <label class="col-form-label col-2" asp-for="DoctorName"></label>
                <div class="col-6">
                    <input asp-for="DoctorName" class="form-control" />
                    <span asp-validation-for="DoctorName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label class="col-form-label col-2" asp-for="Fees"></label>
                <div class="col-6">
                    <input type="text" asp-for="Fees" class="form-control" />
                    <span asp-validation-for="Fees" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label class="col-form-label col-2" asp-for="Specialist"></label>
                <div class="col-6">
                    <select class="form-select" asp-for="Specialist" asp-items="@Html.GetEnumSelectList<Specialist>()">
                        <option value="" selected>Select one</option>
                    </select>
                    <span asp-validation-for="Fees" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label class="col-form-label col-2" asp-for="Picture"></label>
                <div class="col-6">
                    <input type="file" asp-for="Picture" class="form-control" />
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-6 offset-2">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="OnAvilable">
                        <label class="form-check-label">
                            On sale?
                        </label>
                    </div>

                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-6 offset-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section scripts
    {
    <script src="~/libs/jquery/jquery.js"></script>
    <script src="~/libs/jquery-validate/jquery.validate.js"></script>
    <script src="~/libs/jquery-validate/jquery.validate.unobtrusive.js"></script>
}


